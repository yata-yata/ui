section
  header
  section.todo-page
    form#todo-form(ng-submit='addTodo()')
      input.new-todo(placeholder='What needs to be done?', ng-model='newTodo')

    ul.todo-items-lines
      li.todo-item.clickable.animate(ng-repeat='todo in todos | filter:archived | orderBy:statusOrder:true', ng-click='nextStatus(todo)', ng-class='getStatusClass(todo.status)')
        div.todo-icon
        h1 {{todo.title}}
        p {{todo.status}}

    a.btn.btn-default(ng-click='archiveCompleted()') Clear Finished
