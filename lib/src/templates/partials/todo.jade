section
  header
  section#todos
    form#todo-form(ng-submit='addTodo()')
      input#new-todo(placeholder='What needs to be done?', ng-model='newTodo')

    ul
      li.todo-item.clickable.animate(ng-repeat='todo in todos | filter:archived | orderBy:statusOrder:true', ng-click='nextStatus(todo)')
        i(ng-class='getStatusClass(todo.status)')
          span.todo-title {{todo.title}} is {{todo.status}}

    a.btn.btn-default(ng-click='archiveCompleted()') Clear Finished
